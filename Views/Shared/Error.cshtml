@* Views/Shared/Error.cshtml *@
@model ErrorViewModel
@{
    ViewData["Title"] = Model.ErrorTitle ?? "Error";
}

<div class="text-center mt-5">
    <h1 class="display-1">@(Model.StatusCode > 0 ? Model.StatusCode.ToString() : "Error")</h1>
    <h2 class="display-4">@(Model.ErrorTitle ?? "An error occurred")</h2>
    <p class="lead">@(Model.ErrorMessage ?? "An unexpected error has occurred.")</p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted">
            <small>Request ID: <code>@Model.RequestId</code></small>
        </p>
    }

    <div class="mt-4">
        <a href="/" class="btn btn-primary">Return to Home</a>
    </div>
</div>
