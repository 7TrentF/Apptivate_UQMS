@model IEnumerable<Apptivate_UQMS_WebApp.Models.KnowledgeBaseFAQ.FAQ>
<h2>Frequently Asked Questions</h2>


<div class="mb-4">
    <a href="@Url.Action("Admin", "Faq")" class="btn btn-secondary">Admin</a>
</div>

<form asp-action="Search" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search FAQs...">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div class="accordion" id="faqAccordion">
    @foreach (var faq in Model)
    {
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq-@faq.FaqId">
                    @faq.Question
                </button>
            </h2>
            <div id="faq-@faq.FaqId" class="accordion-collapse collapse">
                <div class="accordion-body">
                    @faq.Answer
                    <div class="mt-2">
                        <small class="text-muted">Category: @faq.Category</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>