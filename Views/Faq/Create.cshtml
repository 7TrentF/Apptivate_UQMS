@model Apptivate_UQMS_WebApp.Models.KnowledgeBaseFAQ.FAQ

<h2>Create FAQ</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Question" class="form-label">Question</label>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Answer" class="form-label">Answer</label>
        <textarea asp-for="Answer" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Answer" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Admin" class="btn btn-secondary">Cancel</a>
    </div>
</form>