@model Apptivate_UQMS_WebApp.Models.RoleSelectionViewModel

@{
    Layout = "~/Views/Shared/MinimalLayout.cshtml";
}
<link href="~/css/UserRoles.css" rel="stylesheet" type="text/css" />
<div class="background">
    <div class="user-roles-container">
        <form asp-action="SelectRole" method="post">
            <div class="user-role-card" onclick="selectRole('Student')">
                <img src="~/Svgs/brain-svgrepo-com (1).png" alt="Student Icon" class="icon" />
                <div class="role-title">Student</div>
                <span class="selection-indicator">Click to select</span>
            </div>
            <div class="user-role-card" onclick="selectRole('Staff')">
                <img src="~/Svgs/id-card-identity-name-identification-information-office-svgrepo-com.svg" alt="Staff Icon" class="icon" />
                <div class="role-title">Staff</div>
                <span class="selection-indicator">Click to select</span>
            </div>
            <input type="hidden" name="role" id="selectedRole" />
        </form>
    </div>
</div>

<script>
    function selectRole(role) {
        const cards = document.querySelectorAll('.user-role-card');
        cards.forEach(card => {
            card.style.transform = 'scale(0.95)';
            card.style.opacity = '0.7';
        });

        const selectedCard = document.querySelector(`.user-role-card:contains('${role}')`);
        if (selectedCard) {
            selectedCard.style.transform = 'scale(1.05)';
            selectedCard.style.opacity = '1';
        }

        document.getElementById('selectedRole').value = role;

        // Add a small delay for the animation to be visible
        setTimeout(() => {
            document.querySelector('form').submit();
        }, 300);
    }

    function selectRole(role) {
        document.getElementById('selectedRole').value = role;
        document.querySelector('form').submit();
    }
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
