<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="dashboard.css">
</head>

<body>

    <div class="dashboard-container">
        <!-- Profile Section -->
        <div class="profile-section">
            <div class="profile-info">
                <img src="~/Images/profile-pic.png" alt="Profile Picture" class="profile-pic">
                <h2>Shakshi Patel</h2>
                <div class="notification-icon">
                    <img src="~/Images/notification-icon.jpg" alt="Notifications">
                </div>
            </div>

            <!-- Quick Stats Section -->
            <div class="dashboard-stats">
                <div class="stat-card">
                    <div class="stat-icon">
                        <img src="~/Images/pending-icon.png" alt="Pending Queries">
                    </div>
                    <div class="stat-info">
                        <p>Pending Queries</p>
                        <h3>5,423</h3>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <img src="~/Images/resolved.png" alt="Resolved Queries">
                    </div>
                    <div class="stat-info">
                        <p>Resolved Queries</p>
                        <h3>1,893</h3>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <img src="~/Images/in-progress-icon.png" alt="In Progress Queries">
                    </div>
                    <div class="stat-info">
                        <p>In Progress Queries</p>
                        <h3>189</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Queries Section -->
        <div class="dashboard-section recent-queries">
            <h2>Recent Queries</h2>
            <table class="query-table">
                <thead>
                    <tr>
                        <th>Query ID</th>
                        <th>Subject</th>
                        <th>Status</th>
                        <th>Submission Date</th>
                    </tr>
                </thead>
                <tbody id="recent-queries-list">
                    <!-- Populated with JavaScript -->
                </tbody>
            </table>
            <button class="submit-query-btn" onclick="window.location.href='https://localhost:7061/Query/CreateQuery'">Submit New Query</button>
        </div>

        <!-- Recent Activity Section -->
        <div class="recent-activity-section">
            <h2>Recent Activity</h2>
            <ul class="activity-list">
                <li>
                    <img src="~/Images/profile-pic.png" alt="User">
                    <p>Sonal closed "How do I reset my password?"</p>
                    <span>14 Nov 2022, 5:26 PM</span>
                </li>
                <!-- More activity items here -->
            </ul>
            <button class="show-more-btn">Show More</button>
        </div>

        <!-- Academic Information Section -->
        <div class="academic-info">
            <h3>Academic Information</h3>
            <p><strong>Year:</strong> 2024</p>
            <p><strong>Department:</strong> Information and Technology</p>
            <p><strong>Course:</strong> Computer Science in Application and Development</p>
        </div>

        <!-- New Query Form Modal -->
        <div id="query-modal" class="modal">
            <div class="modal-content">
                <span class="close-btn" onclick="closeQueryForm()">&times;</span>
                <h2>Create a New Query</h2>
                <label for="query-subject">Subject</label>
                <input type="text" id="query-subject" placeholder="Enter your query subject">

                <label for="query-details">Details</label>
                <textarea id="query-details" rows="4" placeholder="Enter query details"></textarea>

                <button class="submit-btn" onclick="submitQuery()">Submit</button>
            </div>
        </div>
    </div>

    <script>
        // Sample query data for display
        const recentQueries = [
            { id: 101, subject: 'Grade Issue', status: 'Pending', date: '2023-09-20' },
            { id: 102, subject: 'Assignment Extension', status: 'Resolved', date: '2023-09-15' },
            { id: 103, subject: 'Financial Aid', status: 'Pending', date: '2023-09-18' },
        ];

        // Load recent queries on page load
        window.onload = () => {
            const queryList = document.getElementById('recent-queries-list');
            recentQueries.forEach(query => {
                const row = `<tr>
                                            <td>${query.id}</td>
                                            <td>${query.subject}</td>
                                            <td>${query.status}</td>
                                            <td>${query.date}</td>
                                        </tr>`;
                queryList.innerHTML += row;
            });
        };

        // Modal for new query submission
        const modal = document.getElementById('query-modal');

        function openQueryForm() {
            modal.style.display = 'block';
        }

        function closeQueryForm() {
            modal.style.display = 'none';
        }

        // Submit query function (placeholder)
        function submitQuery() {
            alert('Query Submitted');
            closeQueryForm();
        }
    </script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .profile-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .profile-info {
            display: flex;
            align-items: center;
        }

        .profile-pic {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            margin-right: 20px;
        }

        .notification-icon img {
            width: 24px;
            height: 24px;
        }

        .dashboard-stats {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }

        .stat-card {
            background-color: #e6f7ff;
            color: #007bff;
            padding: 20px;
            border-radius: 8px;
            width: 30%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .stat-icon img {
            width: 40px;
            height: 40px;
        }

        .stat-info {
            text-align: right;
        }

        .recent-queries {
            margin-bottom: 30px;
        }

        .query-table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

            .query-table th, .query-table td {
                padding: 15px;
                border: 1px solid #ddd;
                text-align: left;
            }

        .recent-activity-section {
            margin-bottom: 30px;
        }

        .activity-list {
            list-style: none;
            padding: 0;
        }

            .activity-list li {
                display: flex;
                align-items: center;
                padding: 10px 0;
            }

                .activity-list li img {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    margin-right: 10px;
                }

        .show-more-btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
        }

        .academic-info {
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: white;
            margin: 10% auto;
            padding: 20px;
            width: 50%;
            border-radius: 8px;
        }

        .close-btn {
            color: red;
            float: right;
            font-size: 24px;
            cursor: pointer;
        }
    </style>
</body>

</html>
