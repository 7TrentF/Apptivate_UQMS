@{
    ViewData["Title"] = "Dashboard";
}



<div class="dashboard-container">
    <!-- Header -->
    <header class="dashboard-header">
        <img src="~/Images/university_logo.png" alt="University Logo" class="logo">
        <div class="user-info">

            <span class="user-role">Role: @ViewBag.UserRole</span>
        </div>
        <a href="/Account/Logout" class="logout-btn">Logout</a>
    </header>

    <link href="~/css/dashboard.css" rel="stylesheet" type="text/css" />

    <!-- Main Content -->
    <main class="dashboard-content">
        <h1>Welcome to UQMS Dashboard</h1>

        <!-- Query Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <h2>Total Queries Submitted</h2>
                <p>24</p>
            </div>
            <div class="stat-card">
                <h2>Resolved Queries</h2>
                <p>18</p>
            </div>
            <div class="stat-card">
                <h2>Pending Queries</h2>
                <p>6</p>
            </div>
            <div class="stat-card">
                <h2>Assigned Queries</h2>
                <p>12</p>
            </div>
        </div>





        <!-- Recent Queries Table -->
        <h2>Recent Queries</h2>
        <table class="recent-queries-table">
            <thead>
                <tr>
                    <th>Query ID</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Submission Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Registration Issue</td>
                    <td>Resolved</td>
                    <td>2024-08-01</td>
                    <td><a href="#">View Details</a></td>
                </tr>
                <!-- More rows here -->
            </tbody>
        </table>

        <!-- Chart -->
        <div class="chart-container">
            <canvas id="queryStatusChart"></canvas>
        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('queryStatusChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Resolved', 'Pending', 'In Progress'],
                datasets: [{
                    label: 'Query Statuses',
                    data: [18, 6, 4],
                    backgroundColor: ['#4CAF50', '#FF9800', '#2196F3']
                }]
            }
        });
    </script>
}
