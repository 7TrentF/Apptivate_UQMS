@model Apptivate_UQMS_WebApp.Models.QueryModel
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/css/Queries.css" />
@{
    ViewData["Title"] = "Create a New Query";
}

<div class="container create-query-container">
    <h1 class="text-center mb-4">Create a New Query</h1>
    <p class="text-center mb-5">Choose the type of query you would like to submit:</p>

    <div class="row justify-content-center">
        <!-- Academic Card -->
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card query-card">
                <div class="card-body text-center">
                    <h5 class="card-title">Academic Issue</h5>
                    <p class="card-text">Ask about homework assignments, projects, exams, or any other course-related questions.</p>
                    <a asp-controller="Query" asp-action="AcademicQuery" asp-route-queryTypeId="1" class="btn btn-primary">Choose Academic</a>
                </div>
            </div>
        </div>

        <!-- Administrative Card -->
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card query-card">
                <div class="card-body text-center">
                    <h5 class="card-title">Administrative Issue</h5>
                    <p class="card-text">Ask about billing, technical issues, account changes, or any other non-academic questions.</p>
                    <a asp-controller="Query" asp-action="AdministrativeQuery" asp-route-queryTypeId="2" class="btn btn-primary">Choose Administrative</a>
                </div>
            </div>
        </div>
    </div>
</div>
