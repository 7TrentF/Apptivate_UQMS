@model Apptivate_UQMS_WebApp.Models.QueryModel.SubmitQueryViewModel
<h2>Submit a Query</h2>

<link rel="stylesheet" href="~/css/Qt.css">
<form asp-action="SubmitQuery" method="post">
    <div class="form-group">
        <label asp-for="Category">Query Category</label>
        <select asp-for="Category" class="form-control">
            <option>Academic</option>
            <option>Financial</option>
            <option>Technical</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentID">Department</label>
        <select asp-for="DepartmentID" class="form-control">
            @foreach (var department in Model.Departments)
            {
                <option value="@department.DepartmentID">@department.DepartmentName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CourseID">Course</label>
        <select asp-for="CourseID" class="form-control">
            @foreach (var course in Model.Courses)
            {
                <option value="@course.CourseID">@course.CourseName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ModuleID">Module</label>
        <select asp-for="ModuleID" class="form-control">
            @foreach (var module in Model.Modules)
            {
                <option value="@module.ModuleID">@module.ModuleName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="QueryDetails">Query Details</label>
        <textarea asp-for="QueryDetails" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Query</button>
</form>


<script src="~/js/conditionalDisplay.js"></script>