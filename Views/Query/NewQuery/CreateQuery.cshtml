@model Apptivate_UQMS_WebApp.Models.QueryModel
<link rel="stylesheet" type="text/css" href="~/css/Queries.css" />
@{
    ViewData["Title"] = "Create a New Query";
}

<div class="container">
    <h1>Create a New Query</h1>
    <p>Choose the type of query you would like to submit:</p>

    <div class="row">
        <!-- Academic Card -->
        <div class="col-md-6">
            <div class="card query-card">
                <div class="card-body text-center">
                    <h5 class="card-title">Academic Issue</h5>
                    <p class="card-text">Ask about homework assignments, projects, exams, or any other course-related questions.</p>
                    <!-- Pass queryTypeId = 1 for Academic -->
                    <a asp-controller="Query" asp-action="AcademicQuery" asp-route-queryTypeId="1" class="btn btn-primary">Choose Academic</a>
                </div>
            </div>
        </div>

        <!-- Administrative Card -->
        <div class="col-md-6">
            <div class="card query-card">
                <div class="card-body text-center">
                    <h5 class="card-title">Administrative Issue</h5>
                    <p class="card-text">Ask about billing, technical issues, account changes, or any other non-academic questions.</p>
                    <!-- Pass queryTypeId = 2 for Administrative -->
                    <a asp-controller="Query" asp-action="AdministrativeQuery" asp-route-queryTypeId="2" class="btn btn-primary">Choose Administrative</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Styles */
    .card {
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        min-height: 250px;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>
