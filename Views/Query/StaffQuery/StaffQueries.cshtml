@{
    ViewData["Title"] = "Queries";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar is automatically rendered from the _Layout.cshtml -->

        <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="content-header">
                <h1>Queries</h1>
                <div class="filters d-flex justify-content-between mb-4">
                    <select class="form-select">
                        <option>This Week</option>
                        <option>Last Week</option>
                        <option>Last Month</option>
                    </select>
                    <input type="text" class="form-control" placeholder="Search for ticket" />
                </div>
            </div>

            <!-- Tabs Section -->
            <div class="tabs">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">All Tickets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Queries/New">New</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Queries/OnGoing">On-Going</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Queries/Resolved">Resolved</a>
                    </li>
                </ul>
            </div>

            <!-- Tickets List Section -->
            <div class="ticket-list mt-4">
                <div class="ticket-item border p-3 mb-3 d-flex justify-content-between align-items-center">
                    <div class="ticket-details">
                        <span class="status-dot yellow"></span>
                        <h5 class="mb-1">Ticket# 2023-CS123</h5>
                        <p class="mb-0">How to deposit money to my portal?</p>
                        <small class="text-muted">Posted at 12:45 AM</small>
                    </div>
                    <div class="ticket-meta text-right">
                        <p class="mb-1">John Snow</p>
                        <a href="#" class="btn btn-link">Open Ticket</a>
                    </div>
                </div>

                <div class="ticket-item border p-3 mb-3 d-flex justify-content-between align-items-center">
                    <div class="ticket-details">
                        <span class="status-dot red"></span>
                        <h5 class="mb-1">Ticket# 2023-CS123 <span class="text-danger">High Priority</span></h5>
                        <p class="mb-0">How to deposit money to my portal?</p>
                        <small class="text-muted">Posted at 12:45 AM</small>
                    </div>
                    <div class="ticket-meta text-right">
                        <p class="mb-1">John Snow</p>
                        <a href="#" class="btn btn-link">Open Ticket</a>
                    </div>
                </div>

                <div class="ticket-item border p-3 mb-3 d-flex justify-content-between align-items-center">
                    <div class="ticket-details">
                        <span class="status-dot green"></span>
                        <h5 class="mb-1">Ticket# 2023-CS123</h5>
                        <p class="mb-0">How to deposit money to my portal?</p>
                        <small class="text-muted">Posted at 12:45 AM</small>
                    </div>
                    <div class="ticket-meta text-right">
                        <p class="mb-1">John Snow</p>
                        <a href="#" class="btn btn-link">Open Ticket</a>
                    </div>
                </div>
            </div>

            <!-- Pagination Section -->
            <nav aria-label="Ticket pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Add your styles inline or in a separate CSS file -->
<style>
    .status-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 10px;
    }

        .status-dot.yellow {
            background-color: #fbc02d;
        }

        .status-dot.red {
            background-color: #d32f2f;
        }

        .status-dot.green {
            background-color: #388e3c;
        }

    .ticket-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 5px;
    }

    .ticket-details h5 {
        margin-bottom: 0;
        font-size: 16px;
    }

    .pagination .page-link {
        color: #00b8a9;
    }

    .pagination .page-item.active .page-link {
        background-color: #00b8a9;
        border-color: #00b8a9;
    }

    .content-header h1 {
        color: #00b8a9;
    }
</style>
