<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="dashboard.css">
</head>
<body>

    <div class="dashboard-container">
        <h1>Student Dashboard</h1>

        <!-- Quick Stats Section -->
        <div class="dashboard-stats">
            <div class="stat-card" id="pending-queries">
                <h3>Pending Queries</h3>
                <p>12</p>
            </div>
            <div class="stat-card" id="resolved-queries">
                <h3>Resolved Queries</h3>
                <p>25</p>
            </div>
            <div class="stat-card" id="total-queries">
                <h3>Total Queries</h3>
                <p>37</p>
            </div>
        </div>

        <!-- Recent Queries -->
        <div class="dashboard-section">
            <h2>Recent Queries</h2>
            <table class="query-table">
                <thead>
                    <tr>
                        <th>Query ID</th>
                        <th>Subject</th>
                        <th>Status</th>
                        <th>Submission Date</th>
                    </tr>
                </thead>
                <tbody id="recent-queries-list">
                    <!-- Populated with JavaScript -->
                </tbody>
            </table>
        </div>

        <!-- Submit New Query -->
        <div class="dashboard-actions">
            <button class="submit-query-btn" onclick="openQueryForm()">Submit New Query</button>
        </div>

        <!-- New Query Form Modal -->
        <div id="query-modal" class="modal">
            <div class="modal-content">
                <span class="close-btn" onclick="closeQueryForm()">&times;</span>
                <h2>Create a New Query</h2>
                <label for="query-subject">Subject</label>
                <input type="text" id="query-subject" placeholder="Enter your query subject">

                <label for="query-details">Details</label>
                <textarea id="query-details" rows="4" placeholder="Enter query details"></textarea>

                <button class="submit-btn" onclick="submitQuery()">Submit</button>
            </div>
        </div>
    </div>

    <script>
        // Sample query data for display
        const recentQueries = [
            { id: 101, subject: 'Grade Issue', status: 'Pending', date: '2023-09-20' },
            { id: 102, subject: 'Assignment Extension', status: 'Resolved', date: '2023-09-15' },
            { id: 103, subject: 'Financial Aid', status: 'Pending', date: '2023-09-18' },
        ];

        // Load recent queries on page load
        window.onload = () => {
            const queryList = document.getElementById('recent-queries-list');
            recentQueries.forEach(query => {
                const row = `<tr>
                            <td>${query.id}</td>
                            <td>${query.subject}</td>
                            <td>${query.status}</td>
                            <td>${query.date}</td>
                        </tr>`;
                queryList.innerHTML += row;
            });
        };

        // Modal for new query submission
        const modal = document.getElementById('query-modal');

        function openQueryForm() {
            modal.style.display = 'block';
        }

        function closeQueryForm() {
            modal.style.display = 'none';
        }

        // Submit query function (placeholder)
        function submitQuery() {
            alert('Query Submitted');
            closeQueryForm();
        }




    </script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .dashboard-stats {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }

        .stat-card {
            background-color: #007bff;
            color: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            width: 30%;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .query-table {
            width: 100%;
            border-collapse: collapse;
        }

            .query-table th, .query-table td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: left;
            }

        .submit-query-btn {
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border-radius: 8px;
            cursor: pointer;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: white;
            margin: 10% auto;
            padding: 20px;
            width: 50%;
            border-radius: 8px;
        }

        .close-btn {
            color: red;
            float: right;
            font-size: 24px;
            cursor: pointer;
        }

    </style>
</body>
</html>

