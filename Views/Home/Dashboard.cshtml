@* <link rel="stylesheet" href="~/css/AdminDashboard.css"> *@
@{
    ViewData["Title"] = "Dashboard";
}
@{
    // Hardcoded data
    string userName = "Thebe Khabo";
    string userImage = "wwwroot/Svgs/user_id_portrait.svg";  // Replace with your image path
    int totalActiveUsers = 5423;
    int totalQueries = 1893;
    int resolvedQueries = 189;
    int pendingQueries = 189;

    int totalUsers = 872400;
    int studentsPercentage = 60;
    int staffPercentage = 30;
    int adminPercentage = 20;

    // Hardcoded data for Weekly Activity
    var openQueries = new int[] { 400, 300, 350, 100, 400, 350, 450 };
    var reQueries = new int[] { 200, 250, 300, 150, 350, 250, 300 };

    // Hardcoded data for Card Expense Statistics
    var cardExpenseData = new int[] { 300, 200, 150, 100 };

    // Hardcoded data for Queries Received
    var queriesReceivedData = new int[] { 5000, 8000, 6000, 12500, 10000 };
}

<div class="dashboard">
    <!-- User Profile -->
    <div class="user-profile">
        <img src="@userImage" alt="@userName" class="user-profile-picture" />
        <h2>@userName</h2>
    </div>

    <!-- Stats Section -->
    <div class="stats-section">
        <div class="stat-item">
            <img src="~/images/Users.png" alt="users" class="icon" />
            <h3>Total Active Users</h3>
            <p>@totalActiveUsers</p>
        </div>

        <div class="stat-item">
            <img src="~/images/checked-user-50.png" alt="users" class="icon" />
            <h3>Total Queries</h3>
            <p>@totalQueries</p>
        </div>

        <div class="stat-item">
            <img src="~/images/computer-50.png" alt="computer" class="icon" />
            <h3>Resolved Queries</h3>
            <p>@resolvedQueries</p>
        </div>

        <div class="stat-item">
            <img src="~/images/computer-50.png" alt="computer" class="icon" />
            <h3>Pending Queries</h3>
            <p>@pendingQueries</p>
        </div>
    </div>

    <!-- User Management Overview Section -->
    <div class="progress-container">
    <div class="user-management-overview">
        <h3>User Management Overview</h3>

        <div class="progress-section">
            <div class="progress-item">
                <span>Students</span>
                    <div class="percentage">
                        <span>@studentsPercentage%</span> 
                    </div>
            </div>
                <div class="progress-bar">
                    <div class="progress" style="width:@studentsPercentage%; background-color: #517f82;"></div>
                </div>

            <div class="progress-item">
                <span>Staff</span>
                    <div class="percentage">
                        <span>@staffPercentage%</span>
                    </div>
            </div>
                <div class="progress-bar2">
                    <div class="progress" style="width:@staffPercentage%; background-color:#56dfea;"></div>
                </div>
         

            <div class="progress-item">
                <span>Admin</span>
                    <div class="percentage">
                        <span>@adminPercentage%</span>
                    </div>
            </div>  
                <div class="progress-bar3">
                    <div class="progress" style="width:@adminPercentage%; background-color:#333333;"></div>
                </div>


            <div class="progress-item">
                <span>Total Users</span>
                <span>@totalUsers</span>
            </div>
                <div class="progress-bar4">
                    <div class="progress" style="width: 100%; background-color: #0000FF;"></div>
                </div>
        </div>
</div>
    </div>
    <!-- Query Heatmap Section -->
    <div class="query-heatmap">
        <h4>Query Heatmap</h4>
        <p>Visual representation of query load by department/staff</p>

        <div class="heatmap-grid">
            <div class="heatmap-item low-load">CS Department <br> 5 queries</div>
            <div class="heatmap-item medium-load">Physics Department <br> 18 queries</div>
            <div class="heatmap-item medium-load">Math Department <br> 12 queries</div>
            <div class="heatmap-item high-load">Chemistry Department <br> 25 queries</div>
            <div class="heatmap-item low-load">Biology Department <br> 8 queries</div>
            <div class="heatmap-item high-load">Admin Team A <br> 30 queries</div>
            <div class="heatmap-item medium-load">Admin Team B <br> 15 queries</div>
            <div class="heatmap-item medium-load">Finance Office <br> 21 queries</div>
            <div class="heatmap-item low-load">IT Support <br> 3 queries</div>
            <div class="heatmap-item low-load">Library Staff <br> 10 queries</div>
        </div>
    </div>

    <div class="system-activity">
        <h4>System Activity</h4>
        <ul class="activity-list">
            <li>
                <img src="/images/user-avatar.jpg" alt="User Avatar" class="avatar" />
                <div>
                    <p>Sonal closed "How to do my password?"</p>
                    <span>14 Nov 2022, 5:26 PM</span>
                </div>
            </li>
            <li>
                <img src="/images/user-avatar.jpg" alt="User Avatar" class="avatar" />
                <div>
                    <p>John updated "Profile information."</p>
                    <span>14 Nov 2022, 3:15 PM</span>
                </div>
            </li>
            <li>
                <img src="/images/user-avatar.jpg" alt="User Avatar" class="avatar" />
                <div>
                    <p>Mary commented on "Project X status."</p>
                    <span>14 Nov 2022, 1:05 PM</span>
                </div>
            </li>
            <li>
                <img src="/images/user-avatar.jpg" alt="User Avatar" class="avatar" />
                <div>
                    <p>Tom assigned "Task 123" to Jane.</p>
                    <span>14 Nov 2022, 11:30 AM</span>
                </div>
            </li>
            <li>
                <img src="/images/user-avatar.jpg" alt="User Avatar" class="avatar" />
                <div>
                    <p>Jane completed "Task 123."</p>
                    <span>14 Nov 2022, 10:00 AM</span>
