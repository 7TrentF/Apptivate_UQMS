<link href="~/css/Chats.css" rel="stylesheet" type="text/css" />


<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-lg-3 sidebar">
            <h3>Conversations</h3>
            <ul id="userList" class="list-unstyled">
                @foreach (var user in Model)
                {
                    <li class="user-item" data-user-id="@user.UserID">
                        <span class="user-name">@user.Name @user.Surname</span>
                        <span class="user-status @(user.IsOnline ? "online" : "offline")"></span>
                        <span class="unread-count @(user.UnreadCount > 0 ? "d-inline-block" : "d-none")">
                            @(user.UnreadCount > 0 ? user.UnreadCount.ToString() : "")
                        </span>
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-8 col-lg-9 chat-area">
            <div id="messageThread" class="message-thread">
                <!-- Messages will be displayed here -->
            </div>
            <div class="input-group">
                <input type="text" id="messageInput" class="form-control" placeholder="Type a message...">
                <div class="input-group-append">
                    <button id="emojiButton" type="button">😊</button>
                    <emoji-picker id="emojiPicker" style="display: none;"></emoji-picker>
                    <button id="sendButton" class="btn btn-primary" type="button">Send</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/emoji-picker-element@1/index.js" type="module"></script>
    <script src="/js/chat.js"></script>
    <script src="/js/chat-enhanced.js"></script>

}